<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_register_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:textSize="34dp"
            android:background="@color/white"
            android:paddingTop="50px"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="322dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_margin="30px"
            android:background="@color/white"
            android:datePickerMode="calendar" />

        <Spinner
            android:id="@+id/spinnerTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:layout_marginTop="16dp"
            android:entries="@array/time_array"
            android:background="@color/white" />

        <Spinner
            android:id="@+id/spinnerPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:layout_marginTop="16dp"
            android:entries="@array/people_array"
            android:background="@color/white"/>

        <Spinner
            android:id="@+id/spinnerReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:layout_marginTop="16dp"
            android:entries="@array/reason_array"
            android:background="@color/white" />

        <EditText
            android:id="@+id/editTextOtherReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:hint="Specify other reason"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonReserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:layout_marginTop="16dp"
            android:text="Reservar"
            android:padding="10px"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonBackToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:layout_marginTop="16dp"
            android:text="AtrÃ¡s"
            android:padding="10px"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
